<%- include("templates/header", {overflowVariable: 'overflow-hidden' }) %>

  <body class="bg-gray-100">
    <style>
      span {
        cursor: pointer;
      }
      body {
        background-image: url('/indexBG.png');
        background-size: cover;
        background-position: center;
        min-height: 100vh;
      }
    </style>
    <div class="grid">
      <div class="m-2">
        <h1 class="text-3xl px-4 font-bold mb-4 mx-auto text-center">Friends List</h1>
        <ul>
          <% if (friendsList && friendsList.length> 0) { %>
            <% friendsList.forEach(friend=> { %>
              <li class="pl-7 pr-6 text-md flex items-center justify-between max-w-md mx-auto bg-cover bg-center py-3"
                style="background-image: url('/username-box.png');">
                <img class="w-12 h-12 rounded-full bg-white border-4 border-gray-500 cursor-pointer" src="/<%= friend.profile_pic %>" alt="profile picture"
                onclick="getProfileInfo('<%= friend.username %>')">
                <span class="text-gray-900 mx-auto text-3xl" onclick="getProfileInfo('<%= friend %>')">
                  <%= friend.username%>
                </span>
                <img class="-z-10 w-12 h-12 rounded-full bg-white border-4 border-gray-500 cursor-pointer" src="/<%= friend.profile_pic %>" alt="profile picture"
                onclick="getProfileInfo('<%= friend.username %>')">
              </li>
              <% }); %>
                <% } else { %>
                  <li class="mt-5 text-gray-900 text-2xl text-center">You have not added any friends yet.<br>Click on the Add Friends Button to start.</li>
                  <% } %>
        </ul>
      </div>
      <div class="flex justify-center mx-auto rounded-lg overflow-hidden mt-8">
        <div class="px-4 py-2 flex items-center">
          <form action="/findFriends" method="get">
            <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded mr-4">
              Add Friends
            </button>
          </form>
          <form action="/profile" method="get">
            <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded mr-4">
              Back to Profile
            </button>
          </form>
        </div>
      </div>

    </div>
    <script>
      function getProfileInfo(friendName) {
        fetch(`/friendProfile?friendName=${encodeURIComponent(friendName)}`, {
          method: 'GET'
        })
          .then(response => {
            if (!response.ok) {
              throw new Error('Failed to get friend profile');
            }

            window.location.href = `/friendProfile?friendName=${encodeURIComponent(friendName)}`;
          })

          .catch(error => {
            console.error('Error updating friend profile:', error);
            alert('Failed to load friend profile');
          });
      }
    </script>
  </body>
  <%- include("templates/footer") %>