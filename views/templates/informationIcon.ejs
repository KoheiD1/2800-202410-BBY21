<script>
     function showModal() {
      document.getElementById('warningModal').classList.remove('hidden');
    }

    function hideModal() {
      document.getElementById('warningModal').classList.add('hidden');
      document.getElementById("image").src = "i_orange.svg";
      clicked = false;
    }

    let clicked = false;

    function toggleImageColor() {
        clicked = !clicked;
        if (clicked) {
            document.getElementById("image").src = "i_red.svg";
        } else {
            document.getElementById("image").src = "i_orange.svg";
        }
    }
    function revertImage() {
        if (!clicked) {
            document.getElementById("image").src = "i_orange.svg";
        }
    }

    function hoveredImage() {
        if (!clicked) {
            document.getElementById("image").src = "i_red.svg";
        }
    }
</script>